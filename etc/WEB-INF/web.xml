<web-app>
    
    <display-name>XML Tools</display-name>
    <description>
        punctum XML and XSD Tools
    </description>
    
    <!-- Servlets -->
    <servlet> 
        <servlet-name>XtoolServlet</servlet-name>
        <servlet-class>org.teherba.xtool.XtoolServlet</servlet-class>
    </servlet>

    <servlet-mapping> 
        <servlet-name>XtoolServlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    
<!--    
    <session-config>
        <session-timeout>600</session-timeout>
    </session-config>
--> 
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
